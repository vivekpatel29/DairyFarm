<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cVSelectAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp">

                <ImageView
                    android:id="@+id/rbSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected_radio_button"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/rbNotSelected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_not_selected_radio_button" />


                <RadioButton
                    android:id="@+id/rbSelectAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDefaultAddressTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-5dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/select_address_list_default_address_text"
                        android:textColor="@color/colorDark"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvAddressTypeHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/status_button_bg"
                            android:drawableStart="@drawable/ic_home_address_black_24dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:elevation="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/select_address_list_home_address_type_text"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAddressTypeOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/status_button_bg"
                            android:drawableStart="@drawable/ic_work_address_black_24dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:elevation="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/select_address_list_office_address_type_text"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAddressTypeOther"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/status_button_bg"
                            android:drawableStart="@drawable/ic_other_address_on_black_24dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@android:color/white"
                            android:elevation="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="3dp"
                            android:text="@string/select_address_list_other_address_type_text"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddressName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@color/colorAddressLightText"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvDeliveryNotAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="-5dp"
                    android:text=""
                    android:textColor="#da4439"
                    android:textSize="14dp"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C4C4C4"
        android:visibility="gone"></View>
</androidx.cardview.widget.CardView>